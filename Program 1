-- Main program with variable and if-then-else
== I am now modifying this. 


declare
   books  integer;
   nowwhat varchar2(40);
begin
   dbms_output.put_line('another change');
   books := 20 + 55 - 2999;
   if books = 9920
   then 
       dbms_output.put_line('they are definitely equal');
   else
       dbms_output.put_line('*** they are not equal');
   end if;

end;
